<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">Bem vindo(a) ao sistema de vendas!</h1>
  <p class="text-xl mb-8">Uma excelente opção</p>
  <%= link_to "Comprar", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4">
        <h2 class="text-gray-800 font-medium text-lg text-center mb-6"><%= category.name %></h2>
        <%= category.image.present? ? image_tag(category.image, class: "max-w-lg") : image_tag("http://via.placeholder.com/512") %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="bg-gray-100 py-20 my-10">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Clientes</h2>
    <div class="flex flex-wrap">
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-gray-100 rounded shadow py-4 px-4">
          <p class="text-gray-800 text-base mb-4">
            Sistema de vendas 1
          </p>
          <p class="text-gray-500 text-xs">
            - Cliente 1
          </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-gray-100 rounded shadow py-4 px-4">
          <p class="text-gray-800 text-base mb-4">
             Sistema de vendas 2
          </p>
          <p class="text-gray-500 text-xs">
            - Cliente 2
          </p>
        </div>
      </div>
      <div class="w-full md:w-1/3 px-2 mb-4">
        <div class="bg-gray-100 rounded shadow py-4 px-4">
          <p class="text-gray-800 text-base mb-4">
            Sistema de vendas 3
          </p>
          <p class="text-gray-500 text-xs">
            - Cliente 3
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-gray-500 text-white my-10 text-center py-20">
  <h2 class="text-3xl font-bold mb-6">UM SISTEMA PARA SEUS NEGÓCIOS</h2>
  <p class="mb-8">Inscreva-se para novidades e ofertas.</p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Seu melhor email", class: "p-2 rounded-l text-gray-800" %>
    <%= submit_tag "Inscrever", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
  <% end %>
</div>
