<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= order.customer_email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Atendido:</strong>
    <%= order.fulfilled %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total:</strong>
    <%= order.total %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Endereço:</strong>
    <%= order.address %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Número do pedido:</strong>
    <%= order.number_order %>
  </p>
  
   <p class="my-5">
    <strong class="block font-medium mb-1">Subtotal:</strong>
    <%= order.calculate_subtotal %>
    <%= puts "Subtotal exibido no formulário: #{@admin_order.calculate_subtotal}" %>
  </p>
 <p class="my-5">
    <strong class="block font-medium mb-1">Taxa de entrega:</strong>
    <%= order.calculate_delivery_fee %>
  </p>
   <p class="my-5">
    <strong class="block font-medium mb-1">Valor do desconto:</strong>
    <%= order.calculate_discount %>
  </p>
   <p class="my-5">
    <strong class="block font-medium mb-1">Total do pedido:</strong>
    # <%= order.calculate_total_order %>
 
  <% if order.order_products.any? %>
    <strong class="block font-medium mb-1">Produtos:</strong>
    <% order.order_products.each do |op| %>
      <%= op.product.name %> 
      <%= op.size %>
      <%= op.quantity %>
    <% end %>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Exibir pedido", [:admin, order], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Editar pedido", edit_admin_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
