<%= form.fields_for :order_products, order_product do |op_form| %>

  <div class="my-5">
    <%= op_form.label :product_id, "Produto" %>
    <%= op_form.collection_select :product_id, Product.all, :id, :name, prompt: "Selecione um produto", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= op_form.label :size, "Tamanho" %>
    <%= op_form.text_field :size, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= op_form.label :quantity, "Quantidade" %>
    <%= op_form.number_field :quantity, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
<% end %>
