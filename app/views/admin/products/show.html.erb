<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_product %>

    <%= link_to "Editar produto", edit_admin_product_path(@admin_product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Apagar produto", admin_product_path(@admin_product), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Voltar para produtos", admin_products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <h2>Pedidos que contÃªm este produto:</h2>
    <% if @admin_product.orders.any? %>
      <ul>
        <% @admin_product.orders.each do |order| %>
          <li><%= link_to "Pedido ##{order.id}", admin_order_path(order) %></li>
        <% end %>
      </ul>
    <% else %>
      <p>Nenhum pedido encontrado para este produto.</p>
    <% end %>
  </div>
</div>
